@model Library.ViewModels.OduncViewModel
@{
    ViewBag.Title = "Edit";
}

<br />


<div class="form-horizontal">
    <h4>@ViewBag.odunc_id id'li Odunc verme islemi Güncelleniyor</h4>
    <br />
    <form method="post" action="/Odunc/Edit">

        <div class="form-group">

            <input type="hidden" class="form-control" name="odunc_id" id="odunc_id" value="@ViewBag.odunc_id" />
        </div>

        <div class="form-group">
            <label for="odunc_almatarihi">odunc alma tarihi</label>
            <input type="date" class="form-control" name="odunc_almatarihi" id="odunc_almatarihi" value="@Model.odunclist.FirstOrDefault().odunc_almatarihi" />
        </div>
        <div class="form-group">
            <label for="odunc_vermetarihi">odunc verme tarihi</label>
            <input type="date" class="form-control" name="odunc_vermetarihi" id="odunc_vermetarihi" value="@Model.odunclist.FirstOrDefault().odunc_vermetarihi" />
        </div>
        <div class="form-group">
            <label for="kitap_id" class="control-label">kitap adı</label>
            <select class="form-control" name="kitap_id" id="kitap_id">
                @foreach (var item in Model.kitaplist)
                {
                    if (item.kitap_id == Model.kitaplist.FirstOrDefault().kitap_id)
                    {
                        <option value="@item.kitap_id" selected>@item.kitap_adi</option>
                    }
                    else
                    {
                        <option value="@item.kitap_id">@item.kitap_adi</option>
                    }

                }
            </select>
        </div>

        <div class="form-group">
            <label for="kullanici_id" class="control-label">kullanici adı</label>
            <select class="form-control" name="kullanici_id" id="kullanici_id">
                @foreach (var item in Model.kullanicilist)
                {
                    if (item.kullanici_id == Model.kullanicilist.FirstOrDefault().kullanici_id)
                    {
                        <option value="@item.kullanici_id" selected>@item.kullanici_adi</option>
                    }
                    else
                    {
                        <option value="@item.kullanici_id">@item.kullanici_adi</option>
                    }

                }
            </select>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>

<br />
<div>
    <input type="button" class="btn btn-danger btn-rounded" value="Listeye Geri Dön" onclick="location.href='@Url.Action("Index", "Odunc")'" />
</div>
