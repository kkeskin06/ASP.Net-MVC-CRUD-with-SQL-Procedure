@model Library.ViewModels.KullaniciViewModel
@{
    ViewBag.Title = "Edit";
}

<br />


<div class="form-horizontal">
    <h4>@ViewBag.dergi_id id'li kullanıcı Güncelleniyor</h4>
    <br />
    <form method="post" action="/Kullanici/Edit">

        <div class="form-group">

            <input type="hidden" class="form-control" name="kullanici_id" id="kullanici_id" value="@ViewBag.kullanici_id" />
        </div>

        <div class="form-group">
            <label for="kullanici_adi">kullanici adi</label>
            <input type="text" class="form-control" name="kullanici_adi" id="kullanici_adi" value="@Model.kullaniciList.FirstOrDefault().kullanici_adi" />
        </div>
        <div class="form-group">
            <label for="kullanici_soyadi">kullanici soyadi</label>
            <input type="text" class="form-control" name="kullanici_soyadi" id="kullanici_soyadi" value="@Model.kullaniciList.FirstOrDefault().kullanici_soyadi" />
        </div>
        <div class="form-group">
            <label for="kullanici_mail">kullanici mail</label>
            <input type="text" class="form-control" name="kullanici_mail" id="kullanici_mail" value="@Model.kullaniciList.FirstOrDefault().kullanici_mail" />
        </div>
        <div class="form-group">
            <label for="kullanici_sifre">kullanici sifre</label>
            <input type="text" class="form-control" name="kullanici_sifre" id="kullanici_sifre" value="@Model.kullaniciList.FirstOrDefault().kullanici_sifre" />
        </div>

        <div class="form-group">
            <label for="kutuphane_id" class="control-label">kutuphane Id</label>
            <select class="form-control" name="kutuphane_id" id="kutuphane_id">
                @foreach (var item in Model.kutuphanelist)
                {
                    if (item.kutuphane_id == Model.kutuphanelist.FirstOrDefault().kutuphane_id)
                    {
                        <option value="@item.kutuphane_id" selected>@item.kutuphane_adi</option>
                    }
                    else
                    {
                        <option value="@item.kutuphane_id">@item.kutuphane_adi</option>
                    }

                }
            </select>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>

<br />
<div>
    <input type="button" class="btn btn-danger btn-rounded" value="Listeye Geri Dön" onclick="location.href='@Url.Action("Index", "Kullanici")'" />
</div>
