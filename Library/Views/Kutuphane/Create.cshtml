@model Library.ViewModels.KutuphaneViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="form-horizontal">
    <form method="post" action="/Kutuphane/Create">
        <div class="form-outline mb-8">
            <label for="kutuphane_adi">Kutuphane Adı</label>
